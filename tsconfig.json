{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "./rules",
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowJs": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2015",
    "pretty": true,
    "inlineSourceMap": false,
    "inlineSources": false
  },
  "include": ["src/**/*"]
}
